  box-shadow: 0 12px 25px rgba(0,0,0,0.2);
  background: #f9f9ff;
}

/* Icon wrapper styling */
.icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120px;
  background: #e8f0fe;
  border-radius: 12px;
  transition: background 0.3s ease;
}
.icon-wrapper .icon {
  font-size: 3rem;
}
.hover-card:hover .icon-wrapper {
  background: #d0e2ff;
}

/* Game card special color */
.game-icon {
  background: #d1e7dd;
}
.hover-card:hover .game-icon {
